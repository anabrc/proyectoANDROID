<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ana.proyectoabrc.Main3Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:text="CAMBIAR CONTRASEÑA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:id="@+id/txtCambiar"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Introduce tu usuario:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtCambiar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="31dp"
                android:id="@+id/txtDNI"
                android:textColor="@android:color/black" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edtDniCambiar"
                android:layout_below="@+id/txtDNI"
                android:layout_alignParentStart="true"
                android:hint="DNI" />

            <TextView
                android:text="Nueva contraseña:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtDniCambiar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="38dp"
                android:id="@+id/txtNewPass"
                android:textColor="@android:color/black" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/edtNewPass"
                android:layout_below="@+id/txtNewPass"
                android:layout_alignParentStart="true"
                android:text="Password" />

            <TextView
                android:text="Repite la contraseña:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtNewPass"
                android:layout_centerHorizontal="true"
                android:id="@+id/txtRepetir"
                android:textColor="?android:attr/colorActivatedHighlight" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:layout_below="@+id/txtRepetir"
                android:layout_centerHorizontal="true"
                android:id="@+id/edtRepetir"
                android:text="Password" />

            <Button
                android:text="CAMBIAR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtRepetir"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="46dp"
                android:id="@+id/btnCambiar" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
